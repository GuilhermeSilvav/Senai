
    public static void main(String[] args) {

     
            float numero, num = 0;
            
            do{
                //---Validando se o numero é positivo, não deixa seguir se for numero negativo
                numero = Float.parseFloat(JOptionPane.showInputDialog("Informe um numero: "));
                
                System.out.print("Não saiu.\n"+ numero + "\nInforme um numero POSITIVO\n");
                
            //---só sai quando o numero for maior que "0"
            }while (numero <0);
           
            //--- imprimir a lista de numeros de zero ao numero informado
          for (int i = 0; i <= numero; i ++){
             
              //--- imprime o valor de num
              System.out.println("Valor: " +i);
              
              //--- acrescenta mais 1 ao valor de num
          }
        }
}
