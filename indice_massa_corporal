package curso;

import javax.swing.JOptionPane;

public class Main {

	public static void main(String[] args) {

		float muitoabaixopeso = 0, abaixopeso = 0, pesonormal = 0, acimapeso = 0,
				obesidadegrauum = 0, obesidadegraudois = 0, obesidadegrautres = 0;
		float peso = 0, altura = 0, Imc;

		peso = Float.parseFloat(JOptionPane.showInputDialog(null, "Informe o peso"));
		altura = Float.parseFloat(JOptionPane.showInputDialog(null, "Informe a altura"));
		
		altura = altura * altura; 
		Imc = peso / altura;
		
		if ((Imc >= 16.0) && (Imc <= 16.9)) {
			peso = muitoabaixopeso;
			JOptionPane.showMessageDialog(null, "Voce esta muito abaixo do peso.");
		}
		
		if ((Imc >= 17.0) && (Imc <= 18.4)) {
			peso = abaixopeso;
			JOptionPane.showMessageDialog(null, "Voce esta abaixo do peso.");
		}
		
		if ((Imc >= 18.5) && (Imc <= 24.9)) {
			peso = pesonormal;
			JOptionPane.showMessageDialog(null, "Voce esta com o peso normal.");
		}
		
		if ((Imc >= 25.0) && (Imc <= 29.9)) {
			peso = acimapeso;
			JOptionPane.showMessageDialog(null, "Voce esta acima do peso.");
		}
		
		if ((Imc >= 30.0) && (Imc <= 34.9)) {
			peso = obesidadegrauum;
			JOptionPane.showMessageDialog(null, "Voce esta com obesidade grau 1.");
		}
		
		if ((Imc >= 30.0) && (Imc <= 34.9)) {
			peso = obesidadegrauum;
			JOptionPane.showMessageDialog(null, "Voce esta com obesidade grau 1.");
		}
		
		if ((Imc >= 35.0) && (Imc <= 40.0)) {
			peso = obesidadegraudois;
			JOptionPane.showMessageDialog(null, "Voce esta com obesidade grau 2.");
		}
		
		if (Imc > 40.1) {
			peso = obesidadegrautres;
			JOptionPane.showMessageDialog(null, "Voce esta com obesidade grau 3.");
		}
	}
}
